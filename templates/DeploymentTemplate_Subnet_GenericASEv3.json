{
    "$schema": "http://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "delegation": {
            "type": "string",
            "metadata": {
                "description": "Subnet Delegation"
            }
        },
        "existingVNETName": {
            "type": "string",
            "metadata": {
                "description": "Name of the VNET to add a subnet to"
            }
        },
        "Location": {
            "type": "string",
            "metadata": {
                "description": "Location of the Network Resourcegroup"
            }
        },
        "networkSecurityGroupName": {
            "type": "string",
            "metadata": {
                "description": "NSG name"
            }
        },
        "newSubnetAddressPrefix": {
            "type": "string",
            "metadata": {
                "description": "Address space of the subnet to add"
            }
        },
        "newSubnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the subnet to add"
            }
        },
        "services": {
            "type": "array",
            "metadata": {
                "description": "serviceEndpoints"
            }
        },
        "udrName": {
            "type": "string",
            "metadata": {
                "description": "UDR name to be atached with this subnet"
            }
        }
    },
    "variables": {
        "apiVersion": "2020-05-01"
    },
    "resources": [
        {
            "apiVersion": "2019-12-01",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "name": "[concat(parameters('existingVNETName'), '/', parameters('newSubnetName'))]",
            "location": "[parameters('Location')]",
            "properties": {
                "addressPrefix": "[parameters('newSubnetAddressPrefix')]",
                "routeTable": {
                    "id": "[concat(resourceGroup().id,'/providers/Microsoft.Network/routeTables/',parameters('udrName'))]"
                },
                "networkSecurityGroup": {
                    "id": "[concat(resourceGroup().id,'/providers/Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'))]"
                },
                "delegations": [
                    {
                        "properties": {
                            "serviceName": "[parameters('delegation')]"
                        },
                        "name": "[parameters('delegation')]"
                    }
                ],
                "serviceEndpoints": "[parameters('services')]"
            }
        }
    ],
    "outputs": {}
}
